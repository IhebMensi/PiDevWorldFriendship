                    <div class="show-more">
                        <div class="pricing-list-container">

                            <!-- Food List -->
                            <a href="{{ path('pi_dev_gestion_evenement_Comment',{'idevenement':pub.idevenement} ) }}"><h4>Comm</h4></a>



                        </div>
                    </div>
                    <a href="#" class="show-more-button" data-more-title="Show More" data-less-title="Show Less"><i class="fa fa-angle-down"></i></a>
                </div>
                <!-- Food Menu / End -->


                <!-- Location -->


                <!-- Reviews -->
                <div id="listing-reviews" class="listing-section">
                    <h3 class="listing-desc-headline margin-top-75 margin-bottom-20">ommentaire <span></span></h3>

                    <div class="clearfix"></div>

                    <!-- Reviews -->
                    <section class="comments listing-reviews">
                        {% for com in coms %}
                        <ul>
                            <li>
                                <div class="avatar"><img src="http://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&amp;s=70" alt="" /></div>
                                <div class="comment-content"><div class="arrow-comment"></div>
                                    <div class="comment-by">{{ com.user.nom }}<span class="date">June 2017</span>
                                        <div class="star-rating" data-rating="5"></div>
                                    </div>
                                    <p>{{ com.comment }}</p>

                                    <div class="review-images mfp-gallery-container">
                                        <a href="images/review-image-01.jpg" class="mfp-gallery"><img src="images/review-image-01.jpg" alt=""></a>
                                    </div>
                                    {% if app.user.nom == com.user.nom %}  <a href="{{ path('pi_dev_gestion_evenement_modifComment',{'idComment':com.idComment} ) }}"><i class="sl sl-icon-like"></i> modifier </a> {% endif %}
                                    {% if app.user.nom == com.user.nom %}  <a href="{{ path('pi_dev_gestion_evenement_suppComment',{'idComment':com.idComment} ) }} "><i class="sl sl-icon-like"></i> supprimer </a> {% endif %}
                                </div>
                            </li>


                        </ul>
                        {% endfor %}
                    </section>

                    <form id="add-comment" class="add-comment">

                        <button class="button">Submit Review</button>
                        <div class="clearfix"></div>
                    </form>

                    <!-- Pagination -->
                    <div class="clearfix"></div>
